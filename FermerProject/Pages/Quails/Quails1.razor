@code {
    double quails_Var3;
    double eggsInDay_Var3;
    double eggsInIncubator_Var3;
    double chicksInBrooder_Var3;
    double aliveChicks_Var3;
    double boyChicks_Var3;
    double girlChicks_Var3;
    double boyChicksInCage_Var3;
    double girlsInCage_Var3;
    double allQuails_Var3;

    double eggsInDayGirls_Var3;
    double meatInOnePeriod_Var3;
    double eggsInOnePeriod_Var3;

    double meatInMonth_Var3;
    double eggsInMonth_Var3;

    double price1_Var3;
    double price2_Var3;
    double commonPriceChicks_Var3;
    double commonPriceQuails_Var3;
    double commonPriceGirls_Var3;
    double commonPrice_Var3;

    double eggsPrice_Var3;
    double meatPrice_Var3;

    void Result_Var3()
    {
        eggsInDay_Var3 = (quails_Var3 * 4 / 5) * 70 / 100;
        //(quails * 4 / 5) - число самок от общего количества перепелов
        //Затем вычисляем 70% - это количество подходящих для инкубации яиц, снесенное самками за 1 день (при яйценоскости 5-6 яиц в неделю)

        eggsInIncubator_Var3 = eggsInDay_Var3 * 8;
        //количество яиц в день умножаем на 8 - это количество яиц, набранное за 8 дней для их последующей инкубации

        chicksInBrooder_Var3 = eggsInIncubator_Var3 * 80 / 100;
        //процент вылупления у эстонских перепелов около 87%. Еще примерно 7% яиц не годятся для инкубации. Итого остается 80%

        aliveChicks_Var3 = chicksInBrooder_Var3 * 95 / 100;
        //процент выживающих цыплят около 95%

        boyChicks_Var3 = aliveChicks_Var3 * 60 / 100;
        //из них самцов и отбраковка около 60%

        girlChicks_Var3 = aliveChicks_Var3 - boyChicks_Var3;
        //самки - будущие несушки

        boyChicksInCage_Var3 = boyChicks_Var3 * 2;
        //Количество птиц на откорме (с 1-го до 2-х месяцев), находящихся в клетке

        girlsInCage_Var3 = girlChicks_Var3 * 10.5;
        //Количество несушек, проживающих в клетке с несушками с 1-й по 8-й месяц (т.е 7 месяцев или 10.5 инкубационных периодов)

        allQuails_Var3 = quails_Var3 + (aliveChicks_Var3 * 2) + boyChicksInCage_Var3 + girlsInCage_Var3;

        eggsInDayGirls_Var3 = girlsInCage_Var3 * 72 / 100;
        //количество яиц в день от несушек (при яйценоскости 72% или 262 яйца в год, процент немного занижен т.к. совсем молодые несушки несутся плохо)

        meatInOnePeriod_Var3 = boyChicks_Var3 + (quails_Var3 / 12) + (girlsInCage_Var3 / 12);
        //количество тушек за 20 дней
        //(quails/12) + (girlQuails / 12) - количество тушек племенных птиц и несушек, забиваемых раз в 8 месяцев (т.е. раз в 12 инкубационных периодов)

        eggsInOnePeriod_Var3 = (eggsInDayGirls_Var3 * 20) + (eggsInDay_Var3 * 12);
        //количество яиц за 20 дней. Т.к. у племенных самок в течение 8 дней яйца отбираются на инкубатор, остается 12 дней

        meatInMonth_Var3 = (meatInOnePeriod_Var3 * 175 / 1000) * 1.5; //средний чистый вес 1 тушки эстонца с учетом "тяжелых" несушек и "легкого" откорма около 175 гр. Переводим в кг
        eggsInMonth_Var3 = eggsInOnePeriod_Var3 * 1.5;


        //Норма корма с погрешностью в сторону увеличения
        //                                 0-1     4*7     28 гр
        //                                 1-2     7*7     49 гр
        //     детский корм                2-3     12*7    84 гр            первые 20 дней около 200 гр (с учетом погибших)
        //                                 3-4     18*7    126 гр

        //                                 4-5     20*7    140 гр           от 20 до 40 дней около 320 гр
        //                                 5-6     25*7    175 гр
        //     взрослый корм               6-7     30*7    210 гр
        //                                 7-8     30*7    210 гр           от 40 до 60 дней около 620 гр

        //За 2 месяца одновременно находится на содержании 3 разновозрастных группы цыплят

        commonPriceChicks_Var3 = (((3 * (price1_Var3 * 0.200)) + (3 * ((price1_Var3 + price2_Var3) / 2 * 0.320)) + (3 * (price2_Var3 * 0.620))) * boyChicks_Var3) / 2;
        //среднее количество съеденного цыплятами корма за месяц (самцы и отбраковка)


        commonPriceQuails_Var3 = ((price1_Var3 * 0.287) + (price2_Var3 * 0.735) + (6 * (price2_Var3 * 0.840))) * quails_Var3 / 8;
        //среднее количество съеденного корма за месяц племенными перепелами

        commonPriceGirls_Var3 = ((price1_Var3 * 0.287) + (price2_Var3 * 0.735) + (6 * (price2_Var3 * 0.840))) * girlsInCage_Var3 / 8;
        //среднее количество корма, съедаемого несушками за месяц

        commonPrice_Var3 = commonPriceChicks_Var3 + commonPriceQuails_Var3 + commonPriceGirls_Var3;
        //Стоимость съедаемого в месяц

        eggsPrice_Var3 = (commonPrice_Var3 * 75 / 100) / eggsInMonth_Var3 * 30;
        meatPrice_Var3 = (commonPrice_Var3 * 25 / 100) / meatInMonth_Var3;

        if (eggsInMonth_Var3 == 0)
        {
            eggsPrice_Var3 = 0;
        }
        if (meatInMonth_Var3 == 0)
        {
            meatPrice_Var3 = 0;
        }
    }
}
