        @code {
            double quails_Var1;
            double eggsInDay_Var1;
            double eggsInIncubator_Var1;
            double chicksInBrooder_Var1;
            double aliveChicks_Var1;
            double girlChicks_Var1;
            double eggsChicks_Var1;
            double aliveChicksInCage_Var1;
            double allQuails_Var1;
            double meatInOnePeriod_Var1;
            double eggsInOnePeriod_Var1;
            double meatInMonth_Var1;
            double eggsInMonth_Var1;

            double price1_Var1;
            double price2_Var1;
            double commonPriceChicks_Var1;
            double commonPriceQuails_Var1;
            double commonPrice_Var1;

            double eggsPrice_Var1;
            double meatPrice_Var1;

            void Result_Var1()
            {
                eggsInDay_Var1 = (quails_Var1 * 3 / 4) * 58 / 100;
                //(quails * 3 / 4) - число самок от общего количества перепелов
                //полученное значение умножаем на 58% - это количество инкубационных яиц, снесенное самками за 1 день (при яйценоскости ~210 яиц в год)

                eggsInIncubator_Var1 = eggsInDay_Var1 * 8;
                //количество яиц в день умножаем на 8 - это количество яиц, набранное за 8 дней для их последующей инкубации

                chicksInBrooder_Var1 = eggsInIncubator_Var1 * 75 / 100;
                //процент вылупления у фараонов около 80%. Т.к. часть яиц отбраковывается для инкубации, то процент яиц, которые пойдут в инкубатор примерно 75%

                aliveChicks_Var1 = chicksInBrooder_Var1 * 85 / 100;
                //процент выживающих цыплят около 85%

                girlChicks_Var1 = aliveChicks_Var1 / 2;
                //из них самок около половины

                eggsChicks_Var1 = girlChicks_Var1 * 30 / 100 * 10;
                //эти самки с 50-го дня будут нестись до момента забоя. Т.е. всего 10 дней. Яйценоскость молодок около 30%

                aliveChicksInCage_Var1 = aliveChicks_Var1 * 2;
                //Количество молодняка (с 1-го до 2-х месяцев), находящихся в клетке

                allQuails_Var1 = quails_Var1 + (aliveChicks_Var1 * 2) + aliveChicksInCage_Var1;

                meatInOnePeriod_Var1 = aliveChicks_Var1 + (quails_Var1 / 9);
                //количество тушек за 20 дней
                //(quails/9) - количество тушек племенных птиц, забиваемых раз в 6 месяцев (т.е. раз в 9 инкубационных периодов)

                eggsInOnePeriod_Var1 = eggsChicks_Var1 + (eggsInDay_Var1 * 12);
                //количество яиц за 20 дней. Т.к. у племенных самок в течение 8 дней яйца отбираются на инкубатор, остается 12 дней

                meatInMonth_Var1 = (meatInOnePeriod_Var1 * 230 / 1000) * 1.5; //средний вес 1 тушки фараона в 2 месяца около 230 гр. Переводим в кг
                eggsInMonth_Var1 = eggsInOnePeriod_Var1 * 1.5;


                //Норма корма с погрешностью в сторону увеличения
                //                                 0-1     4*7     28 гр
                //                                 1-2     7*7     49 гр
                //     детский корм                2-3     12*7    84 гр            первые 20 дней около 200 гр (с учетом погибших)
                //                                 3-4     18*7    126 гр

                //                                 4-5     25*7    175 гр           от 20 до 40 дней около 350 гр
                //                                 5-6     30*7    210 гр
                //     взрослый корм               6-7     35*7    245 гр
                //                                 7-8     35*7    245 гр           от 40 до 60 дней около 750 гр

                //За 2 месяца одновременно находится на содержании 3 разновозрастных группы цыплят

                commonPriceChicks_Var1 = (((3 * (price1_Var1 * 0.200)) + (3 * ((price1_Var1 + price2_Var1) / 2 * 0.350)) + (3 * (price2_Var1 * 0.750))) * aliveChicks_Var1) / 2;
                //среднее количество съеденного цыплятами корма за месяц


                commonPriceQuails_Var1 = (((price1_Var1 * 0.287) + (price2_Var1 * 0.875) + 4 * (price2_Var1 * 0.980)) * quails_Var1) / 6;
                //среднее количество съеденного корма за месяц племенными перепелами

                commonPrice_Var1 = commonPriceChicks_Var1 + commonPriceQuails_Var1;
                //Стоимость съедаемого в месяц

                eggsPrice_Var1 = (commonPrice_Var1 * 13 / 100) / eggsInMonth_Var1 * 30;
                meatPrice_Var1 = (commonPrice_Var1 * 87 / 100) / meatInMonth_Var1;

                if (eggsInMonth_Var1 == 0)
                {
                    eggsPrice_Var1 = 0;
                }
                if (meatInMonth_Var1 == 0)
                {
                    meatPrice_Var1 = 0;
                }
            }
        }
